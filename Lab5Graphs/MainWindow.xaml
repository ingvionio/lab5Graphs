<Window x:Class="Lab5Graphs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Graph Editor" Height="600" Width="800">
    <Grid>
        <!-- Поле для редактирования графа -->
        <Canvas Name="GraphCanvas" Background="LightGray" MouseLeftButtonDown="Canvas_MouseLeftButtonDown"/>

        <!-- Панель для управления -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Background="Gray">
            <Button Name="AddEdgeButton" Content="Add Edge" Click="AddEdgeButton_Click" Margin="5"/>
            <Button Name="ClearButton" Content="Clear Canvas" Click="ClearButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
