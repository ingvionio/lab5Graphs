<Window x:Class="Lab5Graphs.VertexInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vertex Input" Height="150" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Label Content="Enter value for vertex:" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="VertexInputTextBox" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,30,0,0" Height="25"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button Content="OK" Width="60" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="60" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
